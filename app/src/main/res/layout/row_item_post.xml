<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/x15"
        android:layout_marginStart="@dimen/x15"
        android:layout_marginEnd="@dimen/x15"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x15">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_image"
                android:layout_width="@dimen/x55"
                android:layout_height="@dimen/x55"
                android:src="@drawable/placeholder" />

            <com.app.fandirect.ui.views.AnyTextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x15"
                android:layout_toEndOf="@+id/iv_image"
                android:text="Olivia Martins"
                android:textColor="@color/app_dark_gray_2"
                android:textSize="@dimen/x15"
                app:typeface="@string/font_normal" />

            <com.app.fandirect.ui.views.AnyTextView
                android:id="@+id/txt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x15"
                android:layout_toEndOf="@+id/iv_image"
                android:gravity="end"
                android:text="22-07-17"
                android:textColor="@color/app_dark_gray"
                android:textSize="@dimen/x12"
                app:typeface="@string/font_normal" />

            <com.app.fandirect.ui.views.AnyTextView
                android:id="@+id/txt_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_name"
                android:layout_marginStart="@dimen/x15"
                android:layout_marginTop="@dimen/x7"
                android:layout_toEndOf="@+id/iv_image"
                android:drawablePadding="@dimen/x5"
                android:drawableStart="@drawable/sanfransiscoo"
                android:gravity="start"
                android:maxLines="1"
                android:text="San Francisco"
                android:textColor="@color/app_dark_gray"
                android:textSize="@dimen/x13"
                app:typeface="@string/font_normal" />

        </RelativeLayout>

        <com.app.fandirect.ui.views.AnyTextView
            android:id="@+id/txt_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginEnd="@dimen/x15"
            android:layout_marginStart="@dimen/x15"
            android:layout_toEndOf="@+id/iv_image"
            android:text="@string/lorem_ipsum_small"
            android:textColor="@color/app_dark_gray"
            android:textSize="@dimen/x15"
            app:typeface="@string/font_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/x15"
            android:layout_marginEnd="@dimen/x15"
            android:layout_marginBottom="@dimen/x15">

            <com.app.fandirect.ui.views.AnyTextView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/like3"

                android:drawablePadding="@dimen/x5"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/x14"
                app:typeface="@string/font_normal"/>

            <com.app.fandirect.ui.views.AnyTextView
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x12"
                android:drawableStart="@drawable/comment3"
                android:drawablePadding="@dimen/x5"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/x14"
                app:typeface="@string/font_normal"/>

            <com.app.fandirect.ui.views.AnyTextView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x12"
                android:drawableStart="@drawable/share3"
                android:drawablePadding="@dimen/x5"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/x14"
                app:typeface="@string/font_normal"/>

            <com.app.fandirect.ui.views.AnyTextView
                android:id="@+id/favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x12"
                android:drawableStart="@drawable/fav3"
                android:drawablePadding="@dimen/x5"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/x14"
                app:typeface="@string/font_normal"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>