<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_search_box"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_margin="@dimen/x15"
            android:background="@drawable/searchbox2"
            android:orientation="horizontal">

            <com.app.fandirect.ui.views.AnyEditTextView
                android:id="@+id/txt_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="Search"
                android:inputType="text"
                android:paddingStart="@dimen/x15"
                android:textColor="@color/text_color"
                android:textSize="@dimen/x15"
                app:typeface="@string/font_normal" />

            <LinearLayout
                android:id="@+id/ll_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/x5"
                android:layout_weight="0.1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_search_icon"
                    android:layout_width="@dimen/x18"
                    android:layout_height="@dimen/x18"
                    android:src="@drawable/search" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x15"
            android:layout_marginEnd="@dimen/x15"
            android:layout_marginStart="@dimen/x15"
            android:background="@drawable/updatebox"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image"
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x50"
                    android:layout_margin="@dimen/x10"
                    android:src="@drawable/placeholder" />

                <com.app.fandirect.ui.views.AnyTextView
                    android:id="@+id/txt_update_post"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.92"
                    android:background="@color/transparent"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="Update! What you are looking for?"
                    android:maxLines="2"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/x13"
                    app:typeface="@string/font_normal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:src="@drawable/locationicon" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x50"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.app.fandirect.ui.views.AnyTextView
                    android:id="@+id/btn_uploadPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/x10"
                    android:drawablePadding="@dimen/x10"
                    android:drawableStart="@drawable/camera2"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/x15"
                    android:text="Upload Photo"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/x14"
                    app:typeface="@string/font_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|center_vertical"
                    android:paddingEnd="@dimen/x15">

                    <Button
                        android:id="@+id/btn_post"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/x30"
                        android:background="@drawable/rounded_button"
                        android:text="Post"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/x14" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <com.app.fandirect.ui.views.AnyTextView
            android:id="@+id/txt_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginEnd="@dimen/x15"
            android:layout_marginStart="@dimen/x15"
            android:layout_toEndOf="@+id/iv_image"
            android:text="@string/categories"
            android:textColor="@color/app_dark_gray_2"
            android:textSize="@dimen/x15"
            app:typeface="@string/font_normal" />

        <com.app.fandirect.ui.views.CustomRecyclerView
            android:id="@+id/rv_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x10"
            android:divider="@null"
            android:scrollbars="none" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <com.app.fandirect.ui.views.AnyTextView
                android:id="@+id/txt_promotion_feeds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x15"
                android:layout_marginStart="@dimen/x15"
                android:layout_marginTop="@dimen/x15"
                android:layout_toEndOf="@+id/iv_image"
                android:text="@string/promotions_feeds"
                android:textColor="@color/app_dark_gray_2"
                android:textSize="@dimen/x15"
                app:typeface="@string/font_normal" />


            <com.app.fandirect.ui.views.AnyTextView
                android:id="@+id/txt_no_data"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x200"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="No data to show"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/x15"
                android:visibility="gone"
                app:typeface="Roboto-Regular.ttf"

                />

            <com.app.fandirect.ui.views.ExpandedListView
                android:id="@+id/lv_promotions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/x15"
                android:divider="@color/transparent" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>