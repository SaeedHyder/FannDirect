<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x30"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/x30"
            android:layout_marginStart="@dimen/x30"
            android:layout_marginTop="@dimen/x30"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spn_categories"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginEnd="@dimen/x2"
                android:layout_marginStart="@dimen/x2"
                android:layout_marginTop="@dimen/x10"
                android:paddingStart="@dimen/x35" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/view_color" />

            <com.app.fandirect.ui.views.AnyTextView
                android:id="@+id/txt_date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/transparent"
                android:drawablePadding="@dimen/x10"
                android:drawableStart="@drawable/date"
                android:gravity="center_vertical"
                android:hint="Date"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:paddingEnd="@dimen/x10"
                android:paddingStart="@dimen/x10"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/x14"
                app:typeface="@string/font_normal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/view_color" />

            <com.app.fandirect.ui.views.AnyTextView
                android:id="@+id/txt_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/transparent"
                android:drawablePadding="@dimen/x10"
                android:drawableStart="@drawable/time"
                android:gravity="center_vertical"
                android:hint="Time"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:paddingEnd="@dimen/x10"
                android:paddingStart="@dimen/x10"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/x14"
                app:typeface="@string/font_normal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/view_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:gravity="center"
                android:visibility="visible">

                <com.app.fandirect.ui.views.AutoCompleteLocation
                    android:id="@+id/autoComplete"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x40"
                    android:layout_marginStart="@dimen/x30"

                    android:hint="@string/location"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/text_black_color"
                    android:textSize="@dimen/x13" />

                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/x11"
                    android:src="@drawable/location" />

                <ImageView
                    android:id="@+id/img_gps"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:alpha="0.6"
                    android:layout_marginEnd="@dimen/x10"
                    android:src="@drawable/target1" />

            </RelativeLayout>

            <com.app.fandirect.ui.views.AnyEditTextView
                android:id="@+id/txt_location"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/transparent"
                android:drawablePadding="@dimen/x10"
                android:drawableStart="@drawable/location"
                android:hint="Location"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:paddingEnd="@dimen/x10"
                android:paddingStart="@dimen/x10"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/x14"
                app:typeface="@string/font_normal"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/view_color" />

            <com.app.fandirect.ui.views.AnyEditTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100"
                android:layout_marginTop="@dimen/x10"
                android:background="@drawable/rectangle_box_white_2"
                android:gravity="top"
                android:hint="Message"
                android:padding="@dimen/x10"
                android:inputType="textEmailAddress"
                android:imeOptions="actionDone"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/x14"
                app:typeface="@string/font_normal"
                android:visibility="gone"/>

            <com.xw.repo.XEditText
                android:id="@+id/txt_aboutUs"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100"
                android:layout_marginTop="@dimen/x10"
                app:x_disableEmoji="true"
                android:background="@drawable/rectangle_box_white_2"
                android:gravity="top"
                android:hint="Message"
                android:padding="@dimen/x10"
                android:imeOptions="actionDone"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/x14"/>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:layout_marginBottom="@dimen/x15"
                android:layout_marginTop="@dimen/x20"
                android:background="@drawable/rounded_button"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/x16" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>