<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:background="#F7F7F7"
        android:orientation="vertical">

        <com.app.fandirect.ui.views.AnyTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/x12"
            android:text="Who can view your posts"
            android:textColor="@color/app_blue"
            android:textSize="@dimen/x16"
            app:typeface="@string/font_normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/view_color" />

    <LinearLayout
        android:id="@+id/ll_public"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x5"
            android:layout_weight="0.9"
            android:background="@color/white"
            android:orientation="vertical">

            <com.app.fandirect.ui.views.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/x12"
                android:text="Public"
                android:textColor="@color/text_color"
                android:textSize="@dimen/x15"
                app:typeface="@string/font_normal" />

            <com.app.fandirect.ui.views.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x1"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/x12"
                android:text="Fanns and your Network only"
                android:textColor="@color/text_gray_light"
                android:textSize="@dimen/x13"
                app:typeface="@string/font_normal" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_tickPublic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/tick" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginTop="@dimen/x5"
        android:background="@color/view_color" />

    <LinearLayout
        android:id="@+id/ll_fanns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <com.app.fandirect.ui.views.AnyTextView
            android:layout_width="0dp"
            android:layout_height="@dimen/x50"
            android:layout_marginStart="@dimen/x5"
            android:layout_marginTop="@dimen/x5"
            android:layout_weight="0.9"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/x12"
            android:text="Fanns Only"
            android:textColor="@color/text_color"
            android:textSize="@dimen/x15"
            app:typeface="@string/font_normal" />


        <LinearLayout
            android:id="@+id/btn_tickFannsOnly"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/tick" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginTop="@dimen/x5"
        android:background="@color/view_color" />

    <LinearLayout
        android:id="@+id/ll_private"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/x50"
            android:layout_marginStart="@dimen/x5"
            android:layout_weight="0.9"
            android:background="@color/white"
            android:orientation="vertical">

            <com.app.fandirect.ui.views.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/x12"
                android:text="Private"
                android:textColor="@color/text_color"
                android:textSize="@dimen/x15"
                app:typeface="@string/font_normal" />

            <com.app.fandirect.ui.views.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x1"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/x12"
                android:text="Only me"
                android:textColor="@color/text_gray_light"
                android:textSize="@dimen/x13"
                app:typeface="@string/font_normal" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_tickPrivate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/tick" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginTop="@dimen/x5"
        android:background="@color/view_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:background="#F7F7F7"
        android:orientation="vertical">

        <com.app.fandirect.ui.views.AnyTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/x12"
            android:text="Private Profile"
            android:textColor="@color/app_blue"
            android:textSize="@dimen/x16"
            app:typeface="@string/font_normal" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/view_color" />

    <LinearLayout
        android:id="@+id/ll_yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <com.app.fandirect.ui.views.AnyTextView
            android:layout_width="0dp"
            android:layout_height="@dimen/x50"
            android:layout_marginStart="@dimen/x5"
            android:layout_marginTop="@dimen/x5"
            android:layout_weight="0.9"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/x12"
            android:text="Yes"
            android:textColor="@color/text_color"
            android:textSize="@dimen/x15"
            app:typeface="@string/font_normal" />


        <LinearLayout
            android:id="@+id/btn_yes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="center"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/tick" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginTop="@dimen/x5"
        android:background="@color/view_color" />

    <LinearLayout
        android:id="@+id/ll_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <com.app.fandirect.ui.views.AnyTextView
            android:layout_width="0dp"
            android:layout_height="@dimen/x50"
            android:layout_marginStart="@dimen/x5"
            android:layout_marginTop="@dimen/x5"
            android:layout_weight="0.9"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/x12"
            android:text="No"
            android:textColor="@color/text_color"
            android:textSize="@dimen/x15"
            app:typeface="@string/font_normal" />


        <LinearLayout
            android:id="@+id/btn_tickNo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/tick" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginTop="@dimen/x5"
        android:background="@color/view_color" />


</LinearLayout>