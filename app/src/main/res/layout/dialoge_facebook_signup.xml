<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    app:cardCornerRadius="@dimen/x10"
    app:cardElevation="@dimen/x5">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/textLayout"
            android:layout_width="@dimen/x280"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center"
            android:orientation="vertical">

            <com.app.fandirect.ui.views.AnyTextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:gravity="center"
                android:text="Facebook Login"
                android:textColor="@color/black"
                android:textSize="@dimen/x18"
                app:typeface="@string/font_normal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginTop="@dimen/x10"
                android:alpha="0.2"
                android:background="@color/grey" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:alpha="0.2"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/x15"
            android:layout_marginEnd="@dimen/x15"
            android:layout_marginStart="@dimen/x15"
            android:layout_marginTop="@dimen/x10"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_User"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:background="@drawable/rounded_button"
                android:text="@string/user"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/x14" />

            <Button
                android:id="@+id/btn_Sp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginTop="@dimen/x10"
                android:background="@drawable/rounded_button"
                android:text="@string/service_provider"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/x14" />


        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>