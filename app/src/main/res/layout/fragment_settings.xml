<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.app.fandirect.ui.views.AnyTextView
        android:id="@+id/txt_changePassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/x15"
        android:text="@string/change_password"
        android:textColor="@color/app_dark_gray_2"
        android:textSize="@dimen/x15"
        app:typeface="@string/font_normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/view_color" />

    <com.app.fandirect.ui.views.AnyTextView
        android:id="@+id/txt_privacy_settings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/x15"
        android:text="Privacy Settings"
        android:textColor="@color/app_dark_gray_2"
        android:textSize="@dimen/x15"
        app:typeface="@string/font_normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/view_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.app.fandirect.ui.views.AnyTextView
            android:layout_width="0dp"
            android:layout_height="@dimen/x60"
            android:layout_weight="0.9"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/x15"
            android:text="Notifications"
            android:textColor="@color/app_dark_gray_2"
            android:textSize="@dimen/x15"
            app:typeface="@string/font_normal" />


        <ToggleButton
            android:id="@+id/toggleNotification"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x25"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/x10"
            android:layout_marginEnd="@dimen/x10"
            android:background="@drawable/selector_toggle"
            android:checked="true"
            android:text=""
            android:textOff=""
            android:textOn=""/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/view_color"
        android:visibility="gone"/>


    <com.app.fandirect.ui.views.AnyTextView
        android:id="@+id/txt_about_us"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/x15"
        android:text="About Us"
        android:textColor="@color/app_dark_gray_2"
        android:textSize="@dimen/x15"
        app:typeface="@string/font_normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/view_color" />


    <com.app.fandirect.ui.views.AnyTextView
        android:id="@+id/txt_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/x15"
        android:text="Logout"
        android:textColor="@color/app_dark_gray_2"
        android:textSize="@dimen/x15"
        app:typeface="@string/font_normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/view_color" />

</LinearLayout>