<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x7"
        android:gravity="center"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_image"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:layout_margin="@dimen/x10"
            android:src="@drawable/placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.app.fandirect.ui.views.AnyTextView
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Olivia Martins"
                    android:textColor="@color/app_dark_gray_2"
                    android:textSize="@dimen/x14"
                    app:typeface="@string/font_normal" />

                <com.app.fandirect.ui.views.AnyTextView
                    android:id="@+id/txt_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@string/lorem_ipsum"
                    android:textColor="@color/app_dark_gray_2"
                    android:textSize="@dimen/x11"
                    app:typeface="@string/font_normal" />

                <com.app.fandirect.ui.views.AnyTextView
                    android:id="@+id/txt_time_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Tuesday, Nov 08,2018"
                    android:textColor="@color/app_dark_gray"
                    android:textSize="@dimen/x10"
                    app:typeface="@string/font_normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:layout_weight="0.4"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x30"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/x10"
                    android:layout_marginStart="@dimen/x10"
                    android:layout_marginBottom="@dimen/x3"
                    android:layout_weight="0.4"
                    android:background="@drawable/rounded_button"
                    android:paddingEnd="@dimen/x2"
                    android:paddingStart="@dimen/x2"
                    android:text="Completed"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x11" />

                <Button
                    android:id="@+id/btnRate"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x30"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/x10"
                    android:layout_marginStart="@dimen/x10"
                    android:layout_marginTop="@dimen/x3"
                    android:layout_weight="0.4"
                    android:background="@drawable/rounded_button"
                    android:paddingEnd="@dimen/x2"
                    android:paddingStart="@dimen/x2"
                    android:text="Rating"
                    android:textAllCaps="false"
                    android:visibility="visible"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x11" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/view_color" />


</LinearLayout>