<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:background="@color/app_light_gray">

        <com.app.fandirect.ui.views.AnyTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/x15"
            android:gravity="center_vertical"
            android:text="@string/select_date"
            android:textColor="@color/app_dark_gray_2"
            android:textSize="@dimen/x14"
            app:typeface="@string/font_normal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/x10"
            android:orientation="horizontal">

            <com.app.fandirect.ui.views.AnyTextView
                android:id="@+id/txt_date_from"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x30"
                android:background="@drawable/rounded_btn_gray_border"
                android:hint="From"
                android:gravity="center"
                android:paddingStart="@dimen/x2"
                android:paddingEnd="@dimen/x2"
                android:paddingTop="@dimen/x3"
                android:paddingBottom="@dimen/x3"
                android:textSize="@dimen/x9"
                app:typeface="@string/font_normal"/>

            <View
                android:layout_width="@dimen/x9"
                android:layout_height="@dimen/x2"
                android:layout_marginStart="@dimen/x5"
                android:layout_marginEnd="@dimen/x5"
                android:background="@color/app_dark_gray"/>

            <com.app.fandirect.ui.views.AnyTextView
                android:id="@+id/txt_date_to"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x30"
                android:background="@drawable/rounded_btn_gray_border"
                android:hint="To"
                android:gravity="center"
                android:paddingStart="@dimen/x2"
                android:paddingEnd="@dimen/x2"
                android:paddingTop="@dimen/x3"
                android:paddingBottom="@dimen/x3"
                android:textSize="@dimen/x9"
                app:typeface="@string/font_normal"/>

            <LinearLayout
                android:id="@+id/ll_search_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/x5"
                android:layout_marginStart="@dimen/x10"
                android:background="@drawable/rounded_btn_inprogess">

                <ImageView
                    android:layout_width="@dimen/x15"
                    android:layout_height="@dimen/x15"
                    android:src="@drawable/search_icon" />

            </LinearLayout>



        </LinearLayout>



    </LinearLayout>

    <com.app.fandirect.ui.views.AnyTextView
        android:id="@+id/txt_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="No Data to show"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/x15"
        android:visibility="gone"
        app:typeface="Roboto-Regular.ttf"

        />

    <ListView
        android:id="@+id/lv_service_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"></ListView>



</LinearLayout>