<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/poststatusbox"
            android:onClick="onClick"

            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x15">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_image"
                    android:layout_width="@dimen/x45"
                    android:layout_height="@dimen/x45"
                    android:src="@drawable/placeholder" />

                <com.app.fandirect.ui.views.AnyTextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x15"
                    android:layout_toEndOf="@+id/iv_image"
                    android:text="Jonathan Chen"
                    android:textColor="#383838"
                    android:textSize="@dimen/x15"
                    app:typeface="@string/font_normal" />

                <com.app.fandirect.ui.views.AnyTextView
                    android:id="@+id/txt_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x15"
                    android:layout_toEndOf="@+id/iv_image"
                    android:gravity="end"
                    android:text="22-07-17"
                    android:textColor="@color/app_light_gray"
                    android:textSize="@dimen/x12"
                    app:typeface="@string/font_normal" />


                <com.app.fandirect.ui.views.AnyTextView
                    android:id="@+id/txt_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_name"
                    android:layout_marginStart="@dimen/x15"
                    android:layout_toEndOf="@+id/iv_image"
                    android:gravity="start"
                    android:maxLines="1"
                    android:textColor="#3D3D3D"
                    android:textSize="@dimen/x13"
                    app:typeface="@string/font_normal" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_post_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x250"
                android:scaleType="fitXY"
                android:src="@drawable/image3" />

            <!--  <ScrollView
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="0.3"
                  android:fillViewport="true">
      -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="0.3">

                <com.app.fandirect.ui.views.AnyTextView
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/x15"
                    android:layout_marginStart="@dimen/x15"
                    android:layout_marginTop="@dimen/x10"
                    android:layout_toEndOf="@+id/iv_image"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/lorem_ipsum_small"
                    android:textColor="@color/app_dark_gray_2"
                    android:textSize="@dimen/x15"
                    android:visibility="gone"
                    app:typeface="@string/font_normal" />

                <com.app.fandirect.ui.views.AnyTextView
                    android:id="@+id/txt_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x10"
                    android:layout_marginEnd="@dimen/x15"
                    android:layout_marginStart="@dimen/x15"
                    android:layout_marginTop="@dimen/x10"
                    android:layout_toEndOf="@+id/iv_image"

                    android:textColor="@color/app_light_gray"
                    android:textSize="@dimen/x15"
                    app:typeface="@string/font_normal" />

            </LinearLayout>

            <!--   </ScrollView>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x7"
                android:layout_marginEnd="@dimen/x15"
                android:layout_marginStart="@dimen/x15"
                android:layout_marginTop="@dimen/x7"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.app.fandirect.ui.views.AnyTextView
                    android:id="@+id/like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/x5"
                    android:drawableStart="@drawable/like3"

                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/x14"
                    app:typeface="@string/font_normal" />

                <com.app.fandirect.ui.views.AnyTextView
                    android:id="@+id/comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x12"
                    android:drawablePadding="@dimen/x5"
                    android:drawableStart="@drawable/comment3"

                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/x14"
                    app:typeface="@string/font_normal" />

                <com.app.fandirect.ui.views.AnyTextView
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x12"
                    android:drawablePadding="@dimen/x5"
                    android:drawableStart="@drawable/share3"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/x14"
                    app:typeface="@string/font_normal" />

                <com.app.fandirect.ui.views.AnyTextView
                    android:id="@+id/favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x12"
                    android:drawablePadding="@dimen/x5"
                    android:drawableStart="@drawable/fav3"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/x14"
                    app:typeface="@string/font_normal" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>