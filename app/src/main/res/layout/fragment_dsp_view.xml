<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x15"
        android:background="@color/white"
        android:padding="@dimen/x15"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.app.fandirect.ui.views.AnyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.32"
                android:text="@string/service_title"
                android:textColor="@color/app_dark_gray_2"
                android:textSize="@dimen/x14"
                app:typeface="@string/font_normal" />

            <com.app.fandirect.ui.views.AnyTextView
                android:id="@+id/txt_service"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Plumbing"
                android:textColor="@color/app_dark_gray_2"
                android:textSize="@dimen/x14"
                app:typeface="@string/font_normal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.app.fandirect.ui.views.AnyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.32"
                android:text="Location:"
                android:textColor="@color/app_dark_gray_2"
                android:textSize="@dimen/x14"
                app:typeface="@string/font_normal" />

            <com.app.fandirect.ui.views.AnyTextView
                android:id="@+id/txt_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Las Vagas"
                android:textColor="@color/app_dark_gray_2"
                android:textSize="@dimen/x14"
                app:typeface="@string/font_normal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.app.fandirect.ui.views.AnyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.32"
                android:text="@string/date"
                android:textColor="@color/app_dark_gray_2"
                android:textSize="@dimen/x14"
                app:typeface="@string/font_normal" />

            <com.app.fandirect.ui.views.AnyTextView
                android:id="@+id/txt_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="25-Nov-2018"
                android:textColor="@color/app_dark_gray_2"
                android:textSize="@dimen/x14"
                app:typeface="@string/font_normal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.app.fandirect.ui.views.AnyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.32"
                android:text="@string/time"
                android:textColor="@color/app_dark_gray_2"
                android:textSize="@dimen/x14"
                app:typeface="@string/font_normal" />

            <com.app.fandirect.ui.views.AnyTextView
                android:id="@+id/txt_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="03:22 Am"
                android:textColor="@color/app_dark_gray_2"
                android:textSize="@dimen/x14"
                app:typeface="@string/font_normal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_marginTop="@dimen/x5"
            android:orientation="horizontal">

            <com.app.fandirect.ui.views.AnyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.32"
                android:text="@string/message"
                android:textColor="@color/app_dark_gray_2"
                android:textSize="@dimen/x14"
                app:typeface="@string/font_normal" />

            <com.app.fandirect.ui.views.AnyTextView
                android:id="@+id/txt_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"

                android:text="@string/lorem_ipsum_small"
                android:textColor="@color/app_dark_gray_2"
                android:textSize="@dimen/x14"
                app:typeface="@string/font_normal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_accept"
                android:layout_width="0dp"
                android:layout_height="@dimen/x30"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/accept"
                android:layout_marginEnd="@dimen/x3"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/x16" />

            <Button
                android:id="@+id/btn_reject"
                android:layout_width="0dp"
                android:layout_height="@dimen/x30"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/x3"
                android:background="@drawable/rounder_button_white"
                android:text="@string/reject"
                android:textAllCaps="false"
                android:textColor="@color/app_blue"
                android:textSize="@dimen/x16" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>