<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.app.fandirect.ui.views.AnyTextView
        android:id="@+id/txt_no_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:visibility="gone"
        android:gravity="center"
        android:text="No Data to show"
        android:textColor="@color/dark_grey"
        android:layout_gravity="center"
        app:typeface="Roboto-Regular.ttf"
        android:textSize="@dimen/x15"

        />

    <com.app.fandirect.ui.views.CustomRecyclerView
        android:id="@+id/lv_chatBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:divider="@color/transparent"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginEnd="@dimen/x10"
        android:layout_marginBottom="@dimen/x7"
        android:scrollbars="none"
        android:layout_weight="0.9"
      />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:background="@drawable/inbox_box"
        android:gravity="center"
        android:orientation="horizontal">

        <com.app.fandirect.ui.views.AnyEditTextView
            android:id="@+id/txtMessageBox"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:background="@color/transparent"
            android:hint="Write message..."
            android:inputType="textPersonName"
            android:maxLines="1"
            android:paddingStart="@dimen/x10"
            android:textColor="@color/app_dark_gray_2"
            android:textSize="@dimen/x13"
            app:typeface="@string/font_normal" />

        <LinearLayout
            android:id="@+id/ll_send_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/send_icon" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>