<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:onClick="onClick"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ECECEC"
        android:paddingBottom="@dimen/x10"
        android:paddingEnd="@dimen/x10"
        android:paddingStart="@dimen/x10"
        android:paddingTop="@dimen/x10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:background="@drawable/rounded_white_button"
            android:orientation="horizontal">

            <com.app.fandirect.ui.views.AutoCompleteLocation
                android:id="@+id/autoComplete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@color/transparent"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="@dimen/x10"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/x14"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edt_destination"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="Location"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:paddingBottom="@dimen/x10"
                android:paddingStart="@dimen/x10"
                android:paddingTop="@dimen/x5"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/x14" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:background="@drawable/rounder_button_gray"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:src="@drawable/search_icon1" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.app.fandirect.ui.views.AnyTextView
                android:id="@+id/txt_no_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="No Data"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/x15"
                android:visibility="gone"
                app:typeface="Roboto-Regular.ttf"

                />


            <com.app.fandirect.ui.views.ExpandedListView
                android:id="@+id/new_places"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/transparent" />

            <com.app.fandirect.ui.views.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_blue"
                android:textColor="@color/white"
                android:textSize="@dimen/x18"
                app:typeface="OpenSans-Regular.ttf"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/x10"
                android:paddingTop="@dimen/x10"
                android:paddingBottom="@dimen/x10"
                android:text="Nearest Places"/>

            <com.app.fandirect.ui.views.ExpandedListView
                android:id="@+id/lv_nearestPLaces"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>