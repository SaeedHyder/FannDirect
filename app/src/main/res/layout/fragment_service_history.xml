<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">



    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:alpha="0.5"
        android:background="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="@color/app_light_gray"
        android:orientation="horizontal">

        <com.app.fandirect.ui.views.AnyTextView
            android:id="@+id/btnDay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Day"
            android:textColor="@color/white"
            android:background="@color/app_blue"
            android:textSize="@dimen/x14"
            app:typeface="@string/font_normal" />

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@color/black"/>

        <com.app.fandirect.ui.views.AnyTextView
            android:id="@+id/btnWeek"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Week"
            android:textColor="@color/app_dark_gray_2"
            android:textSize="@dimen/x14"
            app:typeface="@string/font_normal" />

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@color/black"/>
        <com.app.fandirect.ui.views.AnyTextView
            android:id="@+id/btnMonth"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Month"
            android:textColor="@color/app_dark_gray_2"
            android:textSize="@dimen/x14"
            app:typeface="@string/font_normal" />

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@color/black"/>
        <com.app.fandirect.ui.views.AnyTextView
            android:id="@+id/btnYear"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Year"
            android:textColor="@color/app_dark_gray_2"
            android:textSize="@dimen/x14"
            app:typeface="@string/font_normal" />

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@color/black"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:alpha="0.5"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:background="@color/app_light_gray">

        <com.app.fandirect.ui.views.AnyTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/x15"
            android:gravity="center_vertical"
            android:text="@string/select_date"
            android:textColor="@color/app_dark_gray_2"
            android:textSize="@dimen/x14"
            app:typeface="@string/font_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/x10"
            android:layout_marginStart="@dimen/x5"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <com.app.fandirect.ui.views.AnyTextView
                android:id="@+id/txt_date_from"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x30"
                android:background="@drawable/rounded_btn_gray_border"
                android:gravity="center"
                android:hint="From"
                android:paddingBottom="@dimen/x3"
                android:paddingEnd="@dimen/x3"
                android:paddingStart="@dimen/x3"
                android:paddingTop="@dimen/x3"
                android:textSize="@dimen/x10"
                app:typeface="@string/font_normal" />

            <View
                android:layout_width="@dimen/x9"
                android:layout_height="@dimen/x2"
                android:layout_marginEnd="@dimen/x5"
                android:layout_marginStart="@dimen/x5"
                android:background="@color/app_dark_gray" />

            <com.app.fandirect.ui.views.AnyTextView
                android:id="@+id/txt_date_to"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x30"
                android:background="@drawable/rounded_btn_gray_border"
                android:gravity="center"
                android:hint="To"
                android:paddingBottom="@dimen/x3"
                android:paddingEnd="@dimen/x3"
                android:paddingStart="@dimen/x3"
                android:paddingTop="@dimen/x3"
                android:textSize="@dimen/x10"
                app:typeface="@string/font_normal" />


            <LinearLayout
                android:id="@+id/ll_search_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x10"
                android:background="@drawable/rounded_btn_inprogess"
                android:padding="@dimen/x5">

                <ImageView
                    android:layout_width="@dimen/x15"
                    android:layout_height="@dimen/x15"
                    android:src="@drawable/search_icon" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:alpha="0.5"
        android:background="@color/black"/>




    <com.app.fandirect.ui.views.AnyTextView
        android:id="@+id/txt_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="No Data to show"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/x15"
        android:visibility="gone"
        app:typeface="Roboto-Regular.ttf"

        />

    <ListView
        android:id="@+id/lv_service_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"></ListView>


</LinearLayout>