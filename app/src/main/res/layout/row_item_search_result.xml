<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:layout_margin="@dimen/x10"
            android:src="@drawable/placeholder" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.app.fandirect.ui.views.AnyTextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Olivia Martins"
                android:textColor="@color/text_color"
                android:textSize="@dimen/x14"
                app:typeface="@string/font_normal" />

            <com.app.fandirect.ui.views.AnyTextView
                android:id="@+id/txt_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/x5"
                android:drawableStart="@drawable/location3"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Las Vegas"
                android:textColor="@color/text_color"
                android:textSize="@dimen/x12"
                app:typeface="@string/font_normal" />

            <com.app.fandirect.ui.views.CustomRatingBar
                android:id="@+id/rbAddRating"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/x15"
                android:layout_marginTop="@dimen/x3"
                android:isIndicator="true"
                android:visibility="visible"
                app:maxStars="5"
                app:onlyForDisplay="true"
                app:starOff="@drawable/star3"
                app:starOn="@drawable/star4"
                app:starPadding="@dimen/x1"
                app:stars="0" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_request"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x27"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/x5"
            android:layout_marginStart="@dimen/x2"
            android:paddingStart="@dimen/x8"
            android:paddingEnd="@dimen/x8"
            android:background="@drawable/rounded_button"
            android:textColor="@color/white"
            android:text="Request for Service"
            android:textSize="@dimen/x10"
            android:textAllCaps="false"
            />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/view_color"/>

</LinearLayout>